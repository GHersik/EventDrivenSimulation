<Window x:Class="SimulationWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulationWindow"
        mc:Ignorable="d"
        Title="Simulation" Height="540" Width="480" ResizeMode="NoResize" Background="BurlyWood">
    <Canvas Name="Render" Height="400" Width="400" Background="Beige" Focusable="True"
           VerticalAlignment="Center" HorizontalAlignment="Center" MouseLeftButtonDown="AddOrRemoveParticle" MouseRightButtonDown="DragParticle">
        <TextBlock FontSize="14" FontWeight="DemiBold"   Canvas.Top="-43" TextAlignment="Center" Canvas.Left="58" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top" Width="284">Left mouse click on the inner box to spawn more particles or on the particle to delete it</TextBlock>
        <Button Click="TimeButton_Click" Name="TimeButton" Canvas.Left="150" Canvas.Top="411" Width="100" Height="22" Background="Goldenrod" BorderBrush="Honeydew" Cursor="Hand" >Stop Time</Button>


    </Canvas>
</Window>
